build: [
  ["cp" "Makefile.config.opam" "Makefile.config"]
  ["sh" "-c" "echo \"GMP_PREFIX = /usr/local\" >> Makefile.config"] {(os = "freebsd")}
  ["sh" "-c" "echo \"MPFR_PREFIX = /usr/local\" >> Makefile.config"] {(os = "freebsd")}
  [make]
  [make "install"]
]
remove: [
  ["ocamlfind" "remove" "gmp"]
]
depends: ["ocamlfind" "camlidl"]
